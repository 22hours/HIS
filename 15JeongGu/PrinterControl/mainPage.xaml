<Page x:Class="PrinterControl.mainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrinterControl"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="300"
      Title="mainPage">

    <Grid>
        <Button x:Name="LOGIN" Content="{Binding login}" HorizontalAlignment="Left" Margin="27,43,0,260" Width="121" Click="LGN_Button_Click" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="REGISTER" Content="Register" HorizontalAlignment="Left" Margin="153,43,0,0" VerticalAlignment="Top" Width="127" Height="57" Click="RGT_Button_Click"/>
        <Label x:Name="USER" Content="사용자" HorizontalAlignment="Left" Margin="27,5,0,0" VerticalAlignment="Top" Visibility="{Binding user}"/>
        <TextBlock x:Name="ID" HorizontalAlignment="Left" Margin="81,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding id}"/>
    </Grid>
</Page>
